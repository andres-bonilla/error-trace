{
  "references": [{ "path": "./core" }, { "path": "./plugins/vite-plugin" }],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "declarationMap": true,
    "baseUrl": ".",
    "types": ["mocha", "chai"],
    "paths": {
      "@andres-bonilla/core": ["core/src"],
      "@andres-bonilla/vite-plugin": ["plugins/vite-plugin/src"]
    }
  },
  "include": ["core/**/*", "plugins/**/*"],
  "exclude": ["node_modules", "dist"]
}
